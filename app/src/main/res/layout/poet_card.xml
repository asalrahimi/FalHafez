<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/poetBioCard"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="10dp"
    android:foregroundGravity="center"
    app:cardBackgroundColor="#00D1D1D1"
    app:cardElevation="0dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/poetNameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/b_kourosh"
            android:gravity="center"
            android:text="نام شاعر"
            android:textColor="#85714E"
            android:textSize="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:foregroundGravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/poetBirthTxt"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/b_kourosh"
                android:gravity="center"
                android:text="زادگاه :"
                android:textColor="#85714E"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/poetDeathTxt"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/b_kourosh"
                android:gravity="center"
                android:text="تاریخ وفات(هجری) :"
                android:textColor="#85714E"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/poetCityTxt"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/b_kourosh"
                android:gravity="center"
                android:text="تاریخ تولد(هجری) :"
                android:textColor="#85714E"
                android:textSize="14dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/indicatorLineTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/b_kourosh"
            android:gravity="center"
            android:text="----------------------------------------------------"
            android:textColor="#85714E"
            android:textSize="24dp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
